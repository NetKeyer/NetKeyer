<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:NetKeyer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        x:Class="NetKeyer.Views.AboutWindow"
        x:DataType="vm:AboutWindowViewModel"
        Title="About NetKeyer"
        Width="400" Height="250"
        MinWidth="400" MinHeight="250"
        MaxWidth="400" MaxHeight="250"
        WindowStartupLocation="CenterOwner"
        CanResize="false">

    <Design.DataContext>
        <vm:AboutWindowViewModel/>
    </Design.DataContext>

    <StackPanel Margin="20" Spacing="15" VerticalAlignment="Center">

        <!-- Application Name -->
        <TextBlock Text="NetKeyer"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>

        <!-- Version -->
        <TextBlock Text="{Binding VersionText}"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Foreground="Gray"/>

        <!-- Credits -->
        <TextBlock Text="by Andrew KC2G and NetKeyer contributors"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="0,10,0,0"/>

        <!-- GitHub Link -->
        <Button Content="https://github.com/NetKeyer/NetKeyer"
                Command="{Binding OpenGitHubCommand}"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                Cursor="Hand"
                Background="Transparent"
                BorderThickness="0"
                Foreground="Blue">
            <Button.Styles>
                <Style Selector="Button:pointerover /template/ ContentPresenter">
                    <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                </Style>
            </Button.Styles>
        </Button>

        <!-- Close Button -->
        <Button Content="Close"
                Command="{Binding CloseCommand}"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                Width="100"
                Margin="0,10,0,0"/>
    </StackPanel>

</Window>
