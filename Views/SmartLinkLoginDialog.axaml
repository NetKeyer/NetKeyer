<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:NetKeyer.Resources.Strings"
        x:Class="NetKeyer.Views.SmartLinkLoginDialog"
        Title="{x:Static res:Resources.SmartLinkLogin_Title}"
        Width="400" Height="280"
        MinWidth="400" MinHeight="280"
        MaxWidth="400" MaxHeight="280"
        WindowStartupLocation="CenterOwner"
        CanResize="false">

    <Grid Margin="20" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,*,Auto">

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="{x:Static res:Resources.SmartLinkLogin_Header}"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Username -->
        <StackPanel Grid.Row="1" Spacing="5" Margin="0,0,0,10">
            <TextBlock Text="{x:Static res:Resources.SmartLinkLogin_UsernameLabel}"/>
            <TextBox Name="UsernameTextBox"
                     Watermark="{x:Static res:Resources.SmartLinkLogin_UsernamePlaceholder}"
                     Padding="8,6"/>
        </StackPanel>

        <!-- Password -->
        <StackPanel Grid.Row="2" Spacing="5" Margin="0,0,0,10">
            <TextBlock Text="{x:Static res:Resources.SmartLinkLogin_PasswordLabel}"/>
            <TextBox Name="PasswordTextBox"
                     Watermark="{x:Static res:Resources.SmartLinkLogin_PasswordPlaceholder}"
                     PasswordChar="â—"
                     Padding="8,6"/>
        </StackPanel>

        <!-- Remember Me -->
        <CheckBox Grid.Row="3"
                  Name="RememberMeCheckBox"
                  Content="{x:Static res:Resources.SmartLinkLogin_RememberMe}"
                  Margin="0,0,0,10"/>

        <!-- Error message -->
        <TextBlock Grid.Row="4"
                   Name="ErrorTextBlock"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   IsVisible="False"
                   Margin="0,0,0,10"/>

        <!-- Status message -->
        <TextBlock Grid.Row="5"
                   Name="StatusTextBlock"
                   Foreground="Gray"
                   FontSize="12"
                   IsVisible="False"
                   Margin="0,0,0,10"/>

        <!-- Spacer -->
        <Border Grid.Row="6"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="7"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Name="CancelButton"
                    Content="{x:Static res:Resources.SmartLinkLogin_Cancel}"
                    Width="80"
                    HorizontalContentAlignment="Center"
                    Padding="6"
                    Click="CancelButton_Click"/>
            <Button Name="LoginButton"
                    Content="{x:Static res:Resources.SmartLinkLogin_Login}"
                    Width="80"
                    HorizontalContentAlignment="Center"
                    Padding="6"
                    Click="LoginButton_Click"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
