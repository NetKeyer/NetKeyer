<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="NetKeyer.Views.SmartLinkLoginDialog"
        Title="SmartLink Login"
        Width="400" Height="240"
        MinWidth="400" MinHeight="240"
        MaxWidth="400" MaxHeight="240"
        WindowStartupLocation="CenterOwner"
        CanResize="false">

    <Grid Margin="20" RowDefinitions="Auto,Auto,Auto,Auto,*,Auto">

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Sign in to SmartLink"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Status message -->
        <TextBlock Grid.Row="1"
                   Name="StatusTextBlock"
                   Text="Opening your browser to sign in..."
                   FontSize="14"
                   Margin="0,0,0,10"/>

        <!-- Progress bar -->
        <ProgressBar Grid.Row="2"
                     Name="ProgressBar"
                     IsIndeterminate="True"
                     Height="4"
                     Margin="0,0,0,10"/>

        <!-- Hint text -->
        <TextBlock Grid.Row="3"
                   Name="HintTextBlock"
                   Text="Complete sign-in in your browser, then return here."
                   Foreground="Gray"
                   FontSize="12"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"/>

        <!-- Remember Me and Error display -->
        <StackPanel Grid.Row="4" VerticalAlignment="Top">
            <CheckBox Name="RememberMeCheckBox"
                      Content="Remember me"
                      Margin="0,0,0,10"/>
            <TextBlock Name="ErrorTextBlock"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       IsVisible="False"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Name="CancelButton"
                    Content="Cancel"
                    Width="80"
                    HorizontalContentAlignment="Center"
                    Padding="6"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
